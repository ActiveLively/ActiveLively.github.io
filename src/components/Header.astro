---
import Menu from "./Menu.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from './ThemeIcon.astro';

---

<header>
  <nav>
    <div>
      <ThemeIcon />
      <Menu />
    </div>
    <Navigation />
  </nav>
</header>

<style>
    nav {
        display: flex;
        justify-content: space-between; /* Pushes div to left, Navigation to right */
        align-items: center;            /* Vertically centers items */
        padding-right: 3rem;            /* ADDS THE PADDING YOU ASKED FOR */
        padding-top: 1rem;
        padding-bottom: 1rem;
    }
  div {
    display: flex;
    justify-content: space-between;
  }
</style>