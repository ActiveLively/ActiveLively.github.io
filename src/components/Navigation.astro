---
import '../styles/global.css';

const links = [
  { url: "/", text: "Home" },
  { url: "/about/", text: "About" },
  { url: "/research/", text: "Research" },
  { url: "/photography/", text: "Photography" },
];
---

<div id="main-menu" class="nav-links flex justify-center items-center gap-8 w-full">
  {links.map((link) => (
    <a 
      href={link.url}
      class="
        btn 
        btn-ghost 
        rounded-xl 
        
        /* Animations */
        transition-transform 
        duration-300 
        motion-reduce:transition-none
        origin-center
        transform-gpu
        
        /* Note: No color or font classes here. 
           The .nav-links a CSS selector targets this automatically. */
      "
    >
      {link.text}
    </a>
  ))}
</div>